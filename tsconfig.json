{
  "extends": "astro/tsconfigs/base",
  "include": ["src/env.d.ts", "src/**/*.ts", "src/**/*.astro", ".eslintrc.cjs"],
  "compilerOptions": {
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@lib/*": ["src/lib/*"],
      "@pages/*": ["src/pages/*"],
      "@src/*": ["src/*"],
      "@root/*": ["./*"]
    }
  }
}
